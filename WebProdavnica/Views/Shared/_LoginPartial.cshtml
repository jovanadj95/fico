@using Microsoft.AspNetCore.Identity
@using WebProdavnica.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav">
            <li>
                <a>Pozdrav @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Odjavi se</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Register">Registracija</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login">Logovanje</a></li>
    </ul>
}
